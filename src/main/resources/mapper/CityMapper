<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pb.ssm.mapper.AuthorMapper">

    <!--开启本mapper下的二级缓冲
    type指定为ehcachecache类开
    在ehcache和mybatis的整合包中
    -->
    <cache />
    <resultMap id="CityMapper" type="City">
        <id property="cityId" column="cityId" />
        <id property="cityName" column="cityName"/>
    </resultMap>
    <select id="findCityNameByCityId"  parameterType="String" resultMap="CityMapper">
        select * from city where CityId=#{CityId}
    </select>
    <select id="findCityIdByCityName"  parameterType="String" resultMap="CityMapper">
        select * from city where CityName=#{CityName}
    </select>
</mapper>